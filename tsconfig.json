{
  "compilerOptions": {
    "target": "ES6", 
    "module": "commonjs", 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node", "mocha"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"   // Include your test files here
  ],
  "exclude": [
    "node_modules"
  ]
}
